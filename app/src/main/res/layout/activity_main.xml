<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".ui.activity.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:background="@color/app_color"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/font_medium"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:layout_marginVertical="8dp"/>
            <ImageView
                android:id="@+id/addBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_field"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiêu tháng này"
                    android:fontFamily="@font/font_medium"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black"
                    android:layout_marginVertical="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="end|center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số dư:"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:text="0"
                        android:textColor="@color/money_color"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"
                        android:id="@+id/totalMoneyMonth"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="end|center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiền thu:"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:text="0"
                        android:textColor="@color/money_earn_color"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"
                        android:id="@+id/moneyEarnMonth"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="end|center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiền chi:"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:text="0"
                        android:textColor="@color/money_payed_color"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"
                        android:id="@+id/moneyPayMonth"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="4dp"
                android:background="@drawable/bg_field"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiêu hôm nay"
                    android:fontFamily="@font/font_medium"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/black"
                    android:layout_marginVertical="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="end|center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số dư:"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:text="0"
                        android:textColor="@color/money_color"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"
                        android:id="@+id/totalMoneyDay"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="end|center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiền thu:"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:text="0"
                        android:textColor="@color/money_earn_color"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"
                        android:id="@+id/moneyEarnDay"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="end|center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiền chi:"
                        android:fontFamily="@font/font_medium"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font_regular"
                        android:text="0"
                        android:textColor="@color/money_payed_color"
                        android:layout_marginEnd="4dp"
                        android:textSize="14sp"
                        android:id="@+id/moneyPayDayh"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_marginVertical="12dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách chi tiêu"
            android:fontFamily="@font/font_medium"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvNotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            tools:listitem="@layout/item_earn_pay_day"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
</layout>
