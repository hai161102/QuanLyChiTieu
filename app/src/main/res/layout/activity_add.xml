<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:background="@color/app_color"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:layout_marginStart="8dp"
                android:id="@+id/back"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm Chi Tiêu"
                android:singleLine="true"
                android:fontFamily="@font/font_medium"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center|start"
                android:layout_marginHorizontal="8dp"
                android:textColor="@color/white"
                android:layout_marginVertical="8dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Chọn ngày"
            android:layout_margin="8dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:fontFamily="@font/font_medium"
            android:background="@drawable/bg_btn"
            android:textColor="@color/white"
            android:id="@+id/dateTimeCurrent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền"
                    android:singleLine="true"
                    android:fontFamily="@font/font_medium"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_input"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:textSize="14sp"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/font_medium"
                    android:hint="Nhập số tiền"
                    android:singleLine="true"
                    android:id="@+id/soTienIn"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại Thu Nhập"
                    android:singleLine="true"
                    android:fontFamily="@font/font_medium"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_input"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_medium"
                    android:hint="Nhập loại thu nhập"
                    android:singleLine="true"
                    android:id="@+id/typeInputIn"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:fontFamily="@font/font_medium"
                android:background="@drawable/bg_btn"
                android:paddingVertical="6dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/addBtnIn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền"
                    android:singleLine="true"
                    android:fontFamily="@font/font_medium"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/soTienChi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_input"
                    android:fontFamily="@font/font_medium"
                    android:hint="Nhập số tiền"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addTypeOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại Chi Tiêu"
                    android:singleLine="true"
                    android:fontFamily="@font/font_medium"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_input"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_medium"
                    android:singleLine="true"
                    android:hint="Nhập loại chi tiêu"
                    android:id="@+id/typeInputOut"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:fontFamily="@font/font_medium"
                android:background="@drawable/bg_btn"
                android:paddingVertical="6dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/addBtnOut"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dayInfo"
                android:text="@string/app_name"
                android:padding="8dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/font_regular"
                android:gravity="end"
                />
        </LinearLayout>
    </LinearLayout>
</layout>
