<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:gravity="center"
            android:background="@color/app_color"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm Bản Ghi"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginVertical="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/bg_input"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:id="@+id/soTienIn"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại Thu Nhập"
                    android:textSize="14sp"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/bg_input"
                    android:padding="4dp"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:minHeight="28dp"
                    android:id="@+id/typeSelectorIn"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại Chi Tiêu mới"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_input"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:id="@+id/typeInputIn"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:fontFamily="serif"
                android:background="@drawable/bg_btn"
                android:paddingVertical="6dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/addBtnIn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/bg_input"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:id="@+id/soTienChi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại chi tiêu"
                    android:textSize="14sp"/>
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/bg_input"
                    android:padding="4dp"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:minHeight="28dp"
                    android:id="@+id/typeSelectorOut"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/addTypeOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loại Chi Tiêu mới"
                    android:textSize="14sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/bg_input"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:id="@+id/typeInputOut"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:fontFamily="serif"
                android:background="@drawable/bg_btn"
                android:paddingVertical="6dp"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/addBtnOut"/>
        </LinearLayout>
    </LinearLayout>
</layout>
