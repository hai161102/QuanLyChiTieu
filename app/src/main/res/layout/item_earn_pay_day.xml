<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:background="@drawable/bg_field"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiêu hôm nay"
            android:fontFamily="@font/font_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_marginVertical="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="end|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số dư:"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="0"
                android:textColor="@color/money_color"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:id="@+id/totalMoneyDay"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="end|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thu:"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="0"
                android:textColor="@color/money_earn_color"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:id="@+id/moneyEarnDay"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="end|center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền chi:"
                android:fontFamily="@font/font_medium"
                android:textColor="@color/black"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_regular"
                android:text="0"
                android:textColor="@color/money_payed_color"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:id="@+id/moneyPayDayh"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Chi Tiết"
            android:id="@+id/show_details"
            android:background="@drawable/bg_btn"
            android:textColor="@color/white"
            android:fontFamily="@font/font_medium"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:layout_marginVertical="10dp"/>
    </LinearLayout>
</layout>